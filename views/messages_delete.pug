extends layout

block content
  h1 #{title}

    p Do you really want to delete this Message?

    form(method='POST' action='')
      div.form-group
        div(class="message")
            div(class="message-text") #{message.text} 
            div(class="written-by") Written by #{message.user.username} on #{message.date_formatted}        div
      button.btn.btn-primary(type='submit') Delete